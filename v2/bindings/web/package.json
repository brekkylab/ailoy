{
    "name": "ailoy-web",
    "version": "0.2.0",
    "author": "Brekkylab Inc. <contact@brekkylab.com>",
    "license": "Apache-2.0",
    "description": "Ailoy JavaScript API on Web browser environments",
    "homepage": "https://brekkylab.github.io/ailoy",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/brekkylab/ailoy"
    },
    "type": "module",
    "main": "./dist/index.js",
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "build:shim": "cd ../../shim_js && npm ci && npm run build && cd ../bindings/web && mkdir -p ./src/shim_js/dist && cp ../../shim_js/dist/* ./src/shim_js/dist/",
        "build:wasm": "wasm-pack build --out-dir ./bindings/web/src --out-name ailoy-web --no-pack && rm -f ./src/.gitignore && node scripts/revise-typedef.mjs",
        "build:ts": "vite build",
        "build": "npm run build:shim && npm run build:wasm && npm run build:ts",
        "test": "vitest",
        "prepack": "clean-package",
        "postpack": "clean-package restore"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/node": "^24.7.2",
        "@vitest/browser": "^3.2.4",
        "@webgpu/types": "^0.1.66",
        "clean-package": "^2.2.0",
        "playwright": "^1.56.0",
        "prettier": "^3.6.2",
        "ts-morph": "^27.0.2",
        "typescript": "^5.8.2",
        "vite": "^7.1.9",
        "vite-plugin-dts": "^4.5.4",
        "vite-plugin-static-copy": "^3.1.3",
        "vite-plugin-wasm": "^3.5.0",
        "vitest": "^3.2.4"
    },
    "clean-package": {
        "indent": 2,
        "remove": [
            "scripts",
            "devDependencies",
            "clean-package"
        ]
    }
}
