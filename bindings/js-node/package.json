{
    "name": "ailoy-node",
    "version": "0.0.1",
    "author": "Brekkylab Inc.",
    "license": "Apache-2.0",
    "description": "",
    "type": "commonjs",
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "prebuilds",
        "README.md"
    ],
    "bin": {
        "ailoy": "./dist/cli.cjs"
    },
    "scripts": {
        "build:cpp": "node build.js",
        "build:ts": "rollup -c --bundleConfigAsCjs",
        "build": "npm run build:cpp && npm run build:ts",
        "clean": "rm -rf dist/",
        "test": "ts-mocha",
        "prepack": "npm run build && node prepack.js && clean-package",
        "postpack": "clean-package restore"
    },
    "devDependencies": {
        "@rollup/plugin-alias": "^5.1.1",
        "@rollup/plugin-commonjs": "^28.0.3",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^16.0.1",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^12.1.2",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/chai": "^5.2.0",
        "@types/jmespath": "^0.15.2",
        "@types/mocha": "^10.0.10",
        "@types/node": "^22.10.7",
        "chai": "^5.2.0",
        "clean-package": "^2.2.0",
        "cmake-js": "^7.3.0",
        "mocha": "^11.2.2",
        "node-addon-api": "^8.3.1",
        "prebuild": "^13.0.1",
        "rollup": "^4.40.2",
        "rollup-plugin-copy": "^3.5.0",
        "rollup-plugin-dts": "^6.2.1",
        "rollup-plugin-tsc-alias": "^1.1.4",
        "ts-mocha": "^11.1.0",
        "tslib": "^2.8.1",
        "tsx": "^4.19.3",
        "typedoc": "^0.28.4",
        "typescript": "^5.6.3"
    },
    "optionalDependencies": {
        "@rollup/rollup-win32-x64-msvc": "^4.40.2"
    },
    "binary": {
        "napi_versions": [
            7
        ],
        "module_name": "ailoy_addon",
        "module_path": "build/Release",
        "package_name": "ailoy-node-v{version}-node-v{abi}-{platform}-{arch}.tar.gz"
    },
    "clean-package": {
        "indent": 2,
        "remove": [
            "scripts",
            "devDependencies",
            "optionalDependencies",
            "clean-package"
        ],
        "replace": {
            "scripts": {
                "install": "prebuild-install && node dist/postinstall.js"
            }
        }
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.11.2",
        "jmespath": "^0.16.0",
        "prebuild-install": "^7.1.3",
        "boxen": "^8.0.1",
        "chalk": "^5.4.1",
        "cli-table3": "^0.6.5",
        "commander": "^14.0.0"
    }
}
