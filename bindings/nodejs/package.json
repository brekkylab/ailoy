{
    "name": "ailoy-node",
    "version": "0.2.0",
    "author": "Brekkylab Inc. <contact@brekkylab.com>",
    "license": "Apache-2.0",
    "description": "Node.js binding for Ailoy API",
    "homepage": "https://brekkylab.github.io/ailoy",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/brekkylab/ailoy"
    },
    "type": "commonjs",
    "main": "dist/index.js",
    "files": [
        "README.md",
        "dist/"
    ],
    "engines": {
        "node": ">=20.3.0"
    },
    "os": [
        "darwin",
        "linux",
        "win32"
    ],
    "publishConfig": {
        "registry": "https://registry.npmjs.org/",
        "access": "public"
    },
    "scripts": {
        "build:napi": "napi build --platform --release --package ailoy --features nodejs --manifest-path ../../Cargo.toml --js ailoy_core.js --dts ailoy_core.d.ts --esm -o ./src && prettier -w ./src/ailoy_core.d.ts",
        "build:ts": "vite build",
        "build": "npm run build:napi && npm run build:ts",
        "test": "vitest",
        "test:coverage": "vitest run --coverage",
        "prepack": "npm run build && clean-package",
        "postpack": "clean-package restore"
    },
    "devDependencies": {
        "@napi-rs/cli": "^3.2.0",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/node": "^24.5.2",
        "@vitest/coverage-v8": "^3.2.4",
        "clean-package": "^2.2.0",
        "dotenv": "^17.2.2",
        "prettier": "^3.6.2",
        "typescript": "^5.8.2",
        "vite": "^7.1.5",
        "vite-plugin-dts": "^4.5.4",
        "vite-plugin-static-copy": "^3.1.2",
        "vitest": "^3.2.4"
    },
    "napi": {
        "binaryName": "ailoy_core",
        "targets": [
            "x86_64-pc-windows-msvc",
            "x86_64-unknown-linux-gnu",
            "aarch64-apple-darwin"
        ],
        "constEnum": false
    },
    "clean-package": {
        "indent": 2,
        "remove": [
            "scripts",
            "devDependencies",
            "napi",
            "clean-package"
        ]
    }
}
